{
	"name": "caimel-stack",
	"version": "0.0.1",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"clean": "turbo run clean && rm -rf node_modules"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.6",
		"turbo": "^2.5.6",
		"ultracite": "5.3.3"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
			"pnpm dlx ultracite fix"
		]
	},
	"packageManager": "pnpm@10.12.1"
}
